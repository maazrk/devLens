{
  "name": "devLens",
  "description": "A great tool which helps to locate the elements in the HTML webpage, useful for debugging and development",
  "version": "0.0.2",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "file:///*//*/*"
  ],
  "browser_action": {
      "default_title": "Click to scan the page",
      "default_icon": {
     "16": "icon16.png",
     "48": "icon48.png",
	 "128": "icon128.png"},
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
